                </ComboBox>
            </StackPanel>
            <Button Height="50" Click="StartInference" Margin="0,30,0,0" FontSize="18" HorizontalAlignment="Center" FontWeight="Bold">Start Inference</Button>
            <GridView x:Name="Results" ItemTemplate="{StaticResource EvalResultsTemplateTwo}" HorizontalAlignment="Center">
            </GridView>
